<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ScoreCheckerV2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ScoreCheckerV2"
    xmlns:views="clr-namespace:ScoreCheckerV2.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ScoreCheckerV2">

    <ShellContent
        Title="ホーム"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <FlyoutItem
        Title="履歴">

        <ShellContent
            Title="履歴"
            ContentTemplate="{DataTemplate views:HistoryPage}"
            Route="HistoryPage"/>
    </FlyoutItem>

    <FlyoutItem
        Title="設定">

        <ShellContent
            Title="設定"
            ContentTemplate="{DataTemplate views:SettingPage}"
            Route="SettingPage"/>
    </FlyoutItem>

    <FlyoutItem
        Title="アプリ情報">
        
        <ShellContent
            Title="アプリ情報"
            ContentTemplate="{DataTemplate views:AppInfoPage}"
            Route="AppInfoPage"/>
    </FlyoutItem>


</Shell>
